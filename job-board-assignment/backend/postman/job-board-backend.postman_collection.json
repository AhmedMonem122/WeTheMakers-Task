{
  "info": {
    "name": "Job Board Backend (NestJS + Prisma)",
    "_postman_id": "00000000-0000-0000-0000-000000000002",
    "description": "Organized Postman collection for Job Board backend with Auth, Job Seeker, and Admin folders.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register (Job Seeker)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Ahmed\",\n  \"email\": \"ahmed@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"ahmed@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Job Seeker",
      "item": [
        {
          "name": "List Jobs",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/jobs?page=1&pageSize=10",
              "host": ["{{baseUrl}}"],
              "path": ["jobs"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "pageSize", "value": "10" }
              ]
            }
          }
        },
        {
          "name": "Get Job by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/jobs/1",
              "host": ["{{baseUrl}}"],
              "path": ["jobs", "1"]
            }
          }
        },
        {
          "name": "Apply to Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jobSeekerToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"resumeText\": \"My resume text or URL here\",\n  \"coverLetter\": \"I am very interested in this job.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/jobs/1/applications",
              "host": ["{{baseUrl}}"],
              "path": ["jobs", "1", "applications"]
            }
          }
        },
        {
          "name": "My Applications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jobSeekerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/me/applications",
              "host": ["{{baseUrl}}"],
              "path": ["me", "applications"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Create Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Backend Engineer\",\n  \"description\": \"Build APIs using NestJS and Prisma.\",\n  \"location\": \"Remote\",\n  \"salary\": 60000,\n  \"status\": \"OPEN\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/jobs",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "jobs"]
            }
          }
        },
        {
          "name": "Update Job",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"CLOSED\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/jobs/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "jobs", "1"]
            }
          }
        },
        {
          "name": "Delete Job",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/jobs/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "jobs", "1"]
            }
          }
        },
        {
          "name": "List All Applications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/applications",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "applications"]
            }
          }
        },
        {
          "name": "Get Application by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/applications/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "applications", "1"]
            }
          }
        },
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/users",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "users"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001"
    },
    {
      "key": "adminToken",
      "value": ""
    },
    {
      "key": "jobSeekerToken",
      "value": ""
    }
  ]
}

